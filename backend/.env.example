# Server Configuration
NODE_ENV=development
PORT=5000

# Database
MONGODB_URI=mongodb://localhost:27017/social-commerce-ai-platform

# JWT Security
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production

# OAuth Configuration
# Google OAuth Client ID (Get from https://console.cloud.google.com/)
GOOGLE_CLIENT_ID=your-google-client-id-here

# API Keys (Get these from respective services)
OPENAI_API_KEY=your-openai-api-key
STRIPE_SECRET_KEY=your-stripe-secret-key
STRIPE_WEBHOOK_SECRET=your-stripe-webhook-secret

# Email Service (Nodemailer)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password

# Redis (Optional - for caching and sessions)
REDIS_URL=redis://localhost:6379

# File Upload (Cloudinary or AWS S3)
CLOUDINARY_CLOUD_NAME=your-cloudinary-cloud-name
CLOUDINARY_API_KEY=your-cloudinary-api-key
CLOUDINARY_API_SECRET=your-cloudinary-api-secret

# External APIs for product tracking
AMAZON_API_KEY=your-amazon-api-key
SHOPIFY_API_KEY=your-shopify-api-key

# Social Media APIs (Optional)
TWITTER_API_KEY=your-twitter-api-key
INSTAGRAM_API_KEY=your-instagram-api-key

# Analytics
GOOGLE_ANALYTICS_ID=your-ga-tracking-id

# CORS Configuration
FRONTEND_URL=http://localhost:3000

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# File Upload Limits
MAX_FILE_SIZE=10485760
ALLOWED_FILE_TYPES=image/jpeg,image/png,image/gif,video/mp4

# AI and ML Services
HUGGING_FACE_API_KEY=your-hugging-face-api-key
COHERE_API_KEY=your-cohere-api-key

# Real-time Messaging
SOCKET_IO_TRANSPORTS=websocket,polling
MESSAGE_RETENTION_DAYS=365
MAX_MESSAGE_LENGTH=2000

# Shopping Cart Configuration
CART_EXPIRY_DAYS=30
FREE_SHIPPING_THRESHOLD=50
DEFAULT_TAX_RATE=0.08
DEFAULT_SHIPPING_COST=9.99

# Session Management
SESSION_SECRET=your-session-secret-change-this
