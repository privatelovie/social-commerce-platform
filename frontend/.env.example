# SocialCommerce Frontend Configuration
# Copy this file to .env.local and add your actual API keys

# Backend API Configuration
REACT_APP_API_URL=http://localhost:5000/api
REACT_APP_SOCKET_URL=http://localhost:5000

# App Configuration
REACT_APP_APP_NAME=SocialCommerce
REACT_APP_VERSION=1.0.0

# Feature Flags
REACT_APP_ENABLE_ANALYTICS=true
REACT_APP_ENABLE_VIDEO_UPLOAD=true
REACT_APP_ENABLE_REAL_TIME=true
REACT_APP_DEBUG_MODE=true

# Socket.IO Configuration
REACT_APP_SOCKET_TRANSPORTS=websocket,polling
REACT_APP_SOCKET_TIMEOUT=10000

# ===== EXTERNAL PRODUCT API INTEGRATION =====
# Real-world API Integration Configuration
# These are for external product data sources

# Amazon Product Advertising API
# Get these from: https://webservices.amazon.com/paapi5/documentation/
REACT_APP_AMAZON_ACCESS_KEY=your_amazon_access_key_here
REACT_APP_AMAZON_SECRET_KEY=your_amazon_secret_key_here  
REACT_APP_AMAZON_PARTNER_TAG=your_amazon_partner_tag_here

# Best Buy API
# Get this from: https://developer.bestbuy.com/
REACT_APP_BESTBUY_API_KEY=your_bestbuy_api_key_here

# Shopify API (if using Shopify products)
# Get these from: https://shopify.dev/api
REACT_APP_SHOPIFY_STORE_URL=your_shopify_store_url
REACT_APP_SHOPIFY_ACCESS_TOKEN=your_shopify_access_token

# Target API (RedCircle API)
# Get this from: https://developer.target.com/
REACT_APP_TARGET_API_KEY=your_target_api_key_here

# Walmart Open API
# Get this from: https://developer.walmartlabs.com/
REACT_APP_WALMART_API_KEY=your_walmart_api_key_here

# eBay API
# Get these from: https://developer.ebay.com/
REACT_APP_EBAY_APP_ID=your_ebay_app_id_here
REACT_APP_EBAY_CERT_ID=your_ebay_cert_id_here

# Review APIs
# Google Places API (for reviews)
REACT_APP_GOOGLE_PLACES_API_KEY=your_google_places_api_key_here

# Trustpilot API
REACT_APP_TRUSTPILOT_API_KEY=your_trustpilot_api_key_here

# Yelp Fusion API
REACT_APP_YELP_API_KEY=your_yelp_api_key_here

# Alternative Free APIs
# RapidAPI Key (for multiple product APIs)
REACT_APP_RAPIDAPI_KEY=your_rapidapi_key_here

# ProductHunt API
REACT_APP_PRODUCTHUNT_API_KEY=your_producthunt_api_key_here

# Price tracking APIs
# PriceAPI for price monitoring
REACT_APP_PRICEAPI_KEY=your_priceapi_key_here

# Cache configuration
REACT_APP_CACHE_DURATION=3600000 # 1 hour in milliseconds
REACT_APP_ENABLE_CACHE=true

# Feature flags
REACT_APP_ENABLE_REAL_PRODUCTS=true
REACT_APP_ENABLE_REAL_REVIEWS=true
REACT_APP_ENABLE_PRICE_TRACKING=true
REACT_APP_ENABLE_MULTI_SOURCE=true